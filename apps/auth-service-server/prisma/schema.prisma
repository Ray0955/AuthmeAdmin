datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AuthKey {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  validUntil DateTime?
  key        String?
  player     Player?   @relation(fields: [playerId], references: [id])
  playerId   String?
}

model Player {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String?
  uuid      String?
  authKeys  AuthKey[]
}
